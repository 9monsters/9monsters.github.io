{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"]
  },
  "include": [
    "docs",
    "docs/.vitepress/components/*.vue",
    "docs/.vitepress/*.ts"
  ],
  "exclude": ["**/node_modules/**", "**/dist/**"]
}
